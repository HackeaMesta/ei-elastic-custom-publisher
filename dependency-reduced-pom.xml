<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wso2.ei</groupId>
  <artifactId>org.wso2.custom.elastic.publisher</artifactId>
  <packaging>bundle</packaging>
  <name>Elasticsearch - Message Flow Data Publisher</name>
  <version>1.0-SNAPSHOT</version>
  <description>Custom statistic observer for WSO2 EI to publish statistic to Elasticsearch</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-scr-plugin</artifactId>
        <version>1.7.2</version>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.3.5</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Name>${project.artifactId}</Bundle-Name>
            <Axis2Module>${project.artifactId}-${project.version}</Axis2Module>
            <Export-Package>org.wso2.custom.elastic.publisher.*</Export-Package>
            <Import-Package>org.wso2.carbon.das.messageflow.data.publish.*;</Import-Package>
            <DynamicImport-Package>*</DynamicImport-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases>
        <updatePolicy>daily</updatePolicy>
        <checksumPolicy>ignore</checksumPolicy>
      </releases>
      <id>wso2-nexus</id>
      <name>WSO2 internal Repository</name>
      <url>http://maven.wso2.org/nexus/content/groups/wso2-public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.wso2.carbon.mediation</groupId>
      <artifactId>org.wso2.carbon.das.messageflow.data.publisher</artifactId>
      <version>4.6.21-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>synapse-core</artifactId>
          <groupId>org.apache.synapse</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.mediation.initializer</artifactId>
          <groupId>org.wso2.carbon.mediation</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axis2</artifactId>
          <groupId>org.apache.axis2.wso2</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.databridge.agent</artifactId>
          <groupId>org.wso2.carbon.analytics-common</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.databridge.commons</artifactId>
          <groupId>org.wso2.carbon.analytics-common</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.databridge.commons.thrift</artifactId>
          <groupId>org.wso2.carbon.analytics-common</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.event.stream.core</artifactId>
          <groupId>org.wso2.carbon.analytics-common</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.das.data.publisher.util</artifactId>
          <groupId>org.wso2.carbon.mediation</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.utils</artifactId>
          <groupId>org.wso2.carbon</groupId>
        </exclusion>
        <exclusion>
          <artifactId>org.wso2.carbon.core</artifactId>
          <groupId>org.wso2.carbon</groupId>
        </exclusion>
        <exclusion>
          <artifactId>kryo-shaded</artifactId>
          <groupId>com.esotericsoftware</groupId>
        </exclusion>
        <exclusion>
          <artifactId>minlog</artifactId>
          <groupId>com.esotericsoftware</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.wso2.orbit.com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-core</artifactId>
      <version>2.6.1.wso2v1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.wso2.orbit.com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>2.6.1.wso2v3</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <elasticsearch.version>5.4.3</elasticsearch.version>
    <fasterxml.jackson.version>2.6.1.wso2v1</fasterxml.jackson.version>
    <fasterxml.jackson.databind.version>2.6.1.wso2v3</fasterxml.jackson.databind.version>
    <log4j.version>1.1.1</log4j.version>
    <junit.version>3.8.2</junit.version>
  </properties>
</project>

